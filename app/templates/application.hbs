<header>
  <nav class='nav nav--fixed'>
    <div class='nav-container'>
      <div class='nav-container-logo'>
        {{link-to 'C' 'application'}}
      </div>

      <ul class='nav-container-list'>
        <li class='nav-container-list-item'>
          {{link-to 'Cups' 'cups' class='nav-container-list-item-link'}}
        </li>
      </ul>

      <span class='nav-container-title'>
        {{title}}
      </span>

      <ul class='nav-container-list nav-container-list--right'>
        {{#if session.isAuthenticated}}
          <li class='nav-container-list-item'>
            <a class='nav-container-list-item-link' {{action 'invalidateSession'}}>Logout</a>
          </li>
        {{else}}
          <li class='nav-container-list-item'>
            {{link-to 'Register' 'users.signup' class='nav-container-list-item-link'}}
          </li>
          <li class='nav-container-list-item'>
            {{link-to 'Login' 'login' class='nav-container-list-item-link'}}
          </li>
        {{/if}}
      </ul>
    </div>
  </nav>
</header>

{{#page-layout}}
  {{outlet}}
{{/page-layout}}
