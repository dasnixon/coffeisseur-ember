<div class='formTitle'>
  Login
</div>

<form class='form'>
  <div class='form-section'>
    <div class='form-section-field'>
      <div class='form-section-field-header'>
        Email
      </div>
      <div class='form-section-field-input'>
        {{input value=identification type='input' classNames='input'}}
      </div>
    </div>
  </div>

  <div class='form-section'>
    <div class='form-section-field'>
      <div class='form-section-field-header'>
        Password
      </div>
      <div class='form-section-field-input'>
        {{input value=password type='password' classNames='input'}}
      </div>
    </div>
  </div>
</form>

<div class='buttonContainer'>
  <button class='button buttonContainer-submit' {{action 'authenticate'}}>
    Login
  </button>
</div>
