<form class='form'>

  <div class='form-section'>
    <div class='form-section-header'>
      Name
    </div>
    {{input value=model.name placeholder='Name' class='input'}}
  </div>

  <div class='form-section'>
    {{textarea rows='3' value=model.description placeholder='Description' class='textarea'}}
  </div>

  <div class='form-section'>
    {{input value=model.degreeOfRoast placeholder='Ideal Degree of Roast' class='input'}}
  </div>

  <div class='form-section'>
    {{input value=model.country placeholder='Country' class='input'}}
  </div>

  <div class='form-section'>
    {{input value=model.region placeholder='Region' class='input'}}
  </div>

  <div class='form-section'>
    {{input value=model.farm placeholder='Farm' class='input'}}
  </div>

  <div class='form-section'>
    <div class='form-section-header form-section-header--inline'>
      Organic?
    </div>
    {{input checked=model.organic type='checkbox' class='input input--checkbox'}}
  </div>

  <button class='button' {{action 'createBean'}}>
    Create Bean
  </button>
</form>
